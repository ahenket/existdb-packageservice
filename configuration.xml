<?xml version="1.0" encoding="UTF-8"?>
<settings>
    <repository>http://demo.exist-db.org/exist/apps/public-repo</repository>
    <authorization>
        <!-- section for definition of user groups and their accesslevel -->
        <group name="admin" access-level="50"/>
        <group name="package-admin" access-level="40"/>
        <group name="package-manager" access-level="30"/>
        <group name="package-user" access-level="10"/>
        <group name="guest" access-level="10"/>

        <!-- ### configure actions to give access to certain user groups ### -->
        <action name="view-default-apps" required-level="50"/>
        <action name="install-package" required-level="40"/>
        <action name="remove-package" required-level="40"/>
        <action name="view-package-details" required-level="30"/>

        <action name="view-packages" required-level="10"/>
    </authorization>

<!--    <repository>http://localhost:8080/exist/apps/public-repo</repository>-->
</settings>